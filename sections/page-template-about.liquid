<style>

  @media screen and (min-width: 768px) {
  .sidebar__item {
      margin-bottom: 25px;
      padding-bottom: 25px;
      width: 30%; }}
  .main-content-wrapper {float:left; width:50%; }
  aside.sidebar-page {
      float: left;
      width: 20%;
      padding-right: 5%;
      margin-left: 15%;
      margin-top: 0%;}
  </style>
  
  
  <div class="container">
    <div class="row">
      <article class="{{ col_width }}">
        {% if section.settings.enable_sidebar %}
        <aside class="sidebar-page {{ side_width }}">
          {% include 'sidebar' %}
        </aside>
        {% endif %}
  
  
  
      <div class="main-content-wrapper">
        {%- assign start_title = page.content | slice: 0, 3 -%}
        {% unless start_title contains 'h1' %}
          <div class="section-header">
            <h1 class="rte poc">{{ page.title }}</h1>
          </div>
        {% endunless %}
        
        <div class="rte poc">
          {{ page.content }}
        </div>
      </div>
      </article>
  
    </div>
  </div>
  
  {% schema %}
    {
      "name": "Page Sidebar",
      "settings": [
        {
          "type": "checkbox",
          "id": "enable_sidebar",
          "label": "Enable sidebar?"
        },
        {
          "type": "radio",
          "id": "sidebar_position",
          "options": [
            { "value": "sidebar-left", "label": "Left"},
            { "value": "sidebar-right", "label": "Right"}
          ],
          "label": "Sidebar position"
        }
      ],
      "blocks": [
        {
          "type": "collection_sidebar",
          "name": "Featured Collection",
          "limit": 1,
          "settings": [
            {
              "type": "text",
              "id": "title",
              "label": "Title"
            },
            {
              "type": "collection",
              "id": "collection",
              "label": "Collection to use"
            },
            {
              "type": "select",
              "id": "collection_qty",
              "options": [
                { "value": "2", "label": "2" },
                { "value": "3", "label": "3" },
                { "value": "4", "label": "4" },
                { "value": "5", "label": "5" },
                { "value": "6", "label": "6" }
              ],
              "label": "Number of products to show"
            }
          ]
        },
        {
          "type": "menu_sidebar",
          "name": "Quick Links",
          "settings": [
            {
              "type": "text",
              "id": "title",
              "label": "Title"
            },
            {
              "type": "link_list",
              "id": "quick_links",
              "label": "Linklist to use"
            }
          ]
        },
        {
          "type": "image_sidebar",
          "name": "Advertisement",
          "settings": [
            {
              "type": "text",
              "id": "title",
              "label": "Title"
            },
            {
              "type": "image_picker",
              "id": "image",
              "label": "Ad image"
            },
            {
              "type": "url",
              "id": "link",
              "label": "Ad link"
            }
          ]
        },
        {
          "type": "blog_sidebar",
          "name": "Most Recent Blog Post",
          "settings": [
            {
              "type": "text",
              "id": "title",
              "label": "Title",
              "default": "Latest Article"
            }
          ]
        }
      ]
    }
  {% endschema %}